<div id="salaryform" class="collapse" aria-labelledby="calculate-salary" data-parent="#pay-views">
    <div class="card-body">
        <div class="text-center my-3">
            <h5 class="text-success" id="salary_results"></h5>
        </div>
        <form id="salary_form">
            <div class="form-group row">
                {{salary_gross_form.salary.label(class_="col-sm-2 col-form-label")}}
                <div class="col-sm-9">
                    {{salary_gross_form.salary(class_="form-control", type="number", min="0", step="0.01", placeholder="Enter Annual Salary")}}
                    {# <small class="text-muted ml-2">Enter your base hourly rate.</small> #}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    {{salary_gross_form.pay_frequency.label}}
                    {% for error in salary_gross_form.pay_frequency.errors %}
                        <div class="text-danger ml-1">{{error}}</div>
                    {% endfor %}
                </div>
                <div class="col-sm-9">
                    {% for radio in salary_gross_form.pay_frequency %}
                        <div class="form-check form-check-inline">
                            {{radio(class_="form-check-input")}}
                            {{radio.label(class_="form-check-label")}}
                        </div>
                    {% endfor %}
                </div>
            </div>
            <button type="submit" class="btn btn-success my-3 float-right">
                <i class="fas fa-calculator"></i>
                &nbsp; Calculate
            </button>
        </form>
    </div>
</div>