{% extends "base.jinja" %}

{% block title %}
    Fiscally Registration
{% endblock title %}

{% block content %}

    <div class="row justify-content-center mt-3">
        <div class="col-md-5">
            {% for cat, msg in get_flashed_messages(with_categories=True) %}
                <div class="alert alert-{{cat}} text-center">
                    {{msg}}
                </div>
            {% endfor %}
            <div class="card">
                <div class="card-body">
                    <h2 class="text-primary text-center">Register</h2>
                    <form action="{{url_for('auth.signup_display')}}" method="POST">
                        {{form.hidden_tag()}}
                        {% for field in form if field.widget.input_type != 'hidden' %}
                            <div class="form-group">
                                {{field.label}}
                                {{field(class_="form-control form-control-lg")}}
                                {% for err in field.errors %}
                                    <span class="text-danger ml-2">{{err}}</span>
                                {% endfor %}
                            </div>
                        {% endfor %}
                        <button type="submit" class="btn btn-lg btn-block btn-info mt-4">Create Account</button>
                    </form>
                    <div class="row my-3">
                        <div class="col"><hr/></div>
                        <div class="col-auto">OR</div>
                        <div class="col"><hr/></div>
                    </div>
                    <div>
                        <a href="{{url_for('auth.google_login')}}" class="btn btn-lg btn-block btn-danger">
                            <i class="fab fa-google mr-1"></i>
                            Signup With Google
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock content %}