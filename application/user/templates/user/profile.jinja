{% extends "base.jinja" %}

{% block title %}
    Profile
{% endblock title %}

{% block content %}
    
    <div style="height: 75vh; padding-top: 10%;">
        <h1 class="text-center text-secondary">Hello Jack</h1>
        <div class="row">
            <div class="col">
                <hr />
            </div>
            <div class="lead text-secondary">
                Welcome to Fiscally
            </div>
            <div class="col">
                <hr />
            </div>
        </div> 
        <div class="row mt-4">
            <div class="col text-center">
                <h4>Please choose from the options below or from the above navigation bar</h4>
            </div>
        </div>
        <div class="row mt-4 justify-content-center text-center">
            <div class="col-md-4 mb-2">
                <a href="{{url_for('pay.pay_display')}}" class="btn btn-lg btn-info">
                    <i class="fas fa-calculator"></i>
                    &nbsp; Calculate Your Pay
                </a>
            </div>
            <div class="col-md-4 mb-2">
                <a href="{{url_for('bills.bills_display')}}" class="btn btn-lg btn-info">
                    <i class="fas fa-plus"></i>
                    &nbsp; Add A Bill
                </a>
            </div>
            <div class="col-md-4 mb-2">
                <a href="{{url_for('savings.savings_display')}}" class="btn btn-lg btn-info">
                    <i class="fas fa-chart-line"></i>
                    &nbsp; Track Your Savings
                </a>
            </div>
        </div>
    </div>


{% endblock content %}